
{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/app/*"],
            "@components/*": ["resources/app/components/*"],
            "@data/*": ["resources/app/data/*"],
            "@hooks/*": ["resources/app/hooks/*"],
            "@pages/*": ["resources/app/pages/*"],
            "@routes/*": ["resources/app/routes/*"],
            "@demo/*": ["resources/js/*"]
        }
    },
    "include": [
        "resources/js/**/*",
        "resources/app/**/*"
    ],
    "exclude": ["node_modules"]
}